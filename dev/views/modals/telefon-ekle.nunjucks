<div class="modal fade" id="telefonEkle">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Telefon Ekle</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form" id="telefonEkleForm" method="post" action="">
          <ul class="list list--column list--content form-layout">
            <li class="list__item">
              <label class="list__item-title">Telefon Tipi</label>
              <div class="list__item-form-group">
                <input type="text" class="form-control" id="telefonTipi" name="telefonTipi" required>
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">Telefon No</label>
              <div class="list__item-form-group">
                <div class="list__item-form-group">
                  <input type="tel" class="form-control" id="telefonNo" name="telefonNo" required>
                </div>
              </div>
            </li>
            <li class="list__item list__item-footer">
              <label class="list__item-title">&nbsp;</label>
              <input type="submit" class="button button--aqua button--size-sm" value="Kaydet">
            </li>
          </ul>
        </form>
      </div>
    </div>
  </div>
</div>