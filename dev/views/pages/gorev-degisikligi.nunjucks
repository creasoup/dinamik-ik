{% endblock %}

{% block bodyClass %}{% endblock %}

{% block content %}

{% include "./partials/sidebar-calisan.nunjucks" %}

{% include "./modals/personal-gorev-degisikligi.nunjucks" %}

<div class="app container">
	
	{% include "./partials/header.nunjucks" %}

  <div class="card card--widget col-widget card--widget-aqua no-height">
    <div class="row">
      <div class="col-md-12">
        <header class="card__header card__header--cols">
          <h2 class="card__title">Görev Değişikliği Talep Formu</h2>
        </header>
        <div class="card__main">
          <ul class="list list--content form-layout">
            <li class="list__item col-md-12">
              <label class="list__item-title">Görev Değişikliği Türü</label>
              <div class="list__item-form-group checkbox-group">
                <div class="form-group custom-checkbox">
                  <input type="checkbox" id="checkbox1">
                  <label for="checkbox1"><span>Terfi</span></label>
                </div>
                <div class="form-group custom-checkbox">
                  <input type="checkbox" id="checkbox2">
                  <label for="checkbox2"><span>Geçici Görev Değişikliği</span></label>
                </div>
                <div class="form-group custom-checkbox">
                  <input type="checkbox" id="checkbox3">
                  <label for="checkbox3"><span>Transfer</span></label>
                </div>
                <div class="form-group custom-checkbox">
                  <input type="checkbox" id="checkbox4">
                  <label for="checkbox4"><span>Görev Değişikliği</span></label>
                  <a href="" class="button--link button--link-aqua">(Detaylı Bilgi İçin Tıklayınız)</a>
                </div>
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">Adı Soyadı</label>
              <div class="list__item-form-group">
                <input type="text" class="form-control" value="Ayşe Ekin Osmanoğulları" disabled="disabled">
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">Talep Tarihi</label>
              <div class="list__item-form-group">
                <input type="text" class="form-control" value="07.12.2016, 11:17" disabled="disabled">
              </div>
            </li>
          </ul>

          <div class="card__main-cols row">
            <div class="col-md-6">
              <header class="card__header card__header--cols">
                <h3 class="card__sub-title">Aday Grubu İşlemleri</h3>
              </header>
              <div class="card__main">
                <ul class="list list--content form-layout">
                  <li class="list__item col-md-12">
                    <label class="list__item-title">Şirketi</label>
                    <div class="list__item-form-group">
