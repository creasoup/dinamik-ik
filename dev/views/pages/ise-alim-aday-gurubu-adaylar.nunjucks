{% extends "./templates/layout.nunjucks" %}

{% block title %}
	Yeni Aday Grubu Talep İşlemleri
{% endblock %}

{% block bodyClass %}{% endblock %}

{% block content %}

{% include "./partials/sidebar-calisan.nunjucks" %}


<div class="app container">
	
	{% include "./partials/header.nunjucks" %}

  <div class="card card--widget col-widget card--widget-aqua no-height">
    <div class="row">
      <div class="col-md-12">
        <header class="card__header card__header--cols">
          <h2 class="card__title">Yeni Aday Grubu Talep İşlemleri</h2>
        </header>
        <div class="card__main">
          <div class="form u-full">
            <ul class="list list--content form-layout form-layout--1-3">
              <li class="list__item col-md-4">
                <label class="list__item-title">Aday Grubu</label>
                <div class="list__item-form-group">
                  <div class="selectbox list__item-element">
                    <select class="form-control" name="" id="" required="">
                      <option value="">Yeni aday grubu ekleyiniz</option>
                    </select>
                  </div>
                </div>
              </li>
              <li class="list__item col-md-4">
                <label class="list__item-title">Aday Grubu Adı</label>
                <div class="list__item-form-group">
                  <input type="text" class="form-control">
                </div>
              </li>
              <li class="list__item col-md-4">
                <button class="button button--size-sm button--aqua">Yeni Aday Grubu Oluşturunuz</button>
              </li>
            </ul>
            <hr class="hr-style">
              <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>&nbsp;</th>
                    <th>Sicil No</th>
                    <th>Adı Soyadı</th>
                    <th>Ünvanı</th>
                    <th>Talep Detayları</th>
                    <th>Adayın Çekmceleri</th>
                    <th>CV</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>
                      <div class="form-group custom-checkbox">
                        <input type="checkbox" id="customCheckbox2">
                        <label for="customCheckbox2"></label>
                      </div>
                    </td>
                    <td>000</td>
                    <td>Ali Ender <br> Yakıcı</td>
                    <td>Süreç ve İş Geliştirme Uzman Yardımcısı</td>
                    <td>-</td>
                    <td>-</td>
                    <td>
                      <a href="" class="button button--size-xs button--aqua">CV</a>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <div class="form-group custom-checkbox">
                        <input type="checkbox" id="customCheckbox2">
                        <label for="customCheckbox2"></label>
                      </div>
                    </td>
                    <td>000</td>
                    <td>Ali Ender <br> Yakıcı</td>
                    <td>Süreç ve İş Geliştirme Uzman Yardımcısı</td>
                    <td>-</td>
                    <td>-</td>
                    <td>
                      <a href="" class="button button--size-xs button--aqua">CV</a>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>

          <div class="card__main-cols row">
            <div class="col-md-6">
              <header class="card__header card__header--cols">
                <h2 class="card__title">Aday Grubu İşlemleri</h2>
              </header>
              <div class="card__main">
                <button class="button button--size-md button--red">Seçilen Adayları Sil</button>
              </div>
            </div>
            <div class="col-md-6">
              <header class="card__header card__header--cols">
                <h2 class="card__title">Talep işlemleri</h2>
              </header>
              <div class="card__main">
                <ul class="list list--v2 list--content form-layout">
                  <li class="list__item">
                    <label class="list__item-title">Talep</label>
                    <div class="list__item-form-group d-flex">
                      <div class="selectbox list--v2__item">
                        <select class="form-control" name="" id="" required="">
                          <option value=""></option>
                        </select>
                      </div>
                      <div class="button-group list--v2__item">
                        <button class="button button--size-sm button--cyan">Aktar</button>
                        <button class="button button--size-sm button--red">Sil</button>
                      </div>
                    </div>
                  </li>
                  <li class="list__item">
                    <label class="list__item-title">Durum</label>
                    <div class="list__item-form-group d-flex">
                      <div class="selectbox list--v2__item">
                        <select class="form-control" name="" id="" required="">
                          <option value=""></option>
                        </select>
                      </div>
                      <div class="button-group list--v2__item">
                        <button class="button button--size-sm button--aqua">Güncelle</button>
                      </div>
                    </div>
                  </li>
                  <li class="list__item no-height">
                    <label class="list__item-title">Açıklama</label>
                    <div class="list__item-form-group d-flex">
                      <div class="list--v2__item">
                        <textarea name="" id="" cols="4" rows="4" class="form-control"></textarea>
                      </div>
                      <div class="button-group list--v2__item">
                        <button class="button button--size-sm button--aqua">Güncelle</button>
                      </div>
                    </div>
                  </li>
                  <li class="list__item no-height">
                    <label class="list__item-title">Paylaşım Durumu</label>
                    <div class="list__item-form-group d-flex">
                      <div class="list--v2__item">
                        <div class="form-group custom-checkbox">
                          <input type="checkbox" id="customCheckbox3">
                          <label for="customCheckbox3"></label>
                        </div>
                      </div>
                      <div class="button-group list--v2__item">
                        <button class="button button--size-sm button--aqua">Güncelle</button>
                      </div>
                    </div>
                  </li>
                  <li class="list__item">
                    <label class="list__item-title">Mail Tipi</label>
                    <div class="list__item-form-group d-flex">
                      <div class="selectbox list--v2__item">
                        <select class="form-control" name="" id="" required="">
                          <option value=""></option>
                        </select>
                      </div>
                      <div class="button-group list--v2__item">
                        <button class="button button--size-sm button--aqua">Gönder</button>
                      </div>
                    </div>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="card card--widget col-widget card--widget-aqua no-height">
    <div class="row">
      <div class="col-md-12">
        <header class="card__header card__header--cols">
          <h2 class="card__title">Adaylar</h2>
        </header>
        <div class="card__main">
          <div class="form u-full">
            <ul class="list list--content form-layout form-layout--1-3">
              <li class="list__item col-md-6">
                <label class="list__item-title">İlk Aday Gurubu</label>
                <div class="list__item-form-group">
                  <div class="selectbox list__item-element">
                    <select class="form-control" name="" id="" required="">
                      <option value="">Çekmece Seçiniz</option>
                    </select>
                  </div>
                </div>
              </li>
              <li class="list__item col-md-6">
                <label class="list__item-title">İşlem</label>
                <div class="list__item-form-group">
                  <div class="selectbox list__item-element">
                    <select class="form-control" name="" id="" required="">
                      <option value="">Durum Seçiniz</option>
                    </select>
                  </div>
                </div>
              </li>
              <li class="list__item col-md-4">
                <label class="list__item-title">İkinci Aday Gurubu</label>
                <div class="list__item-form-group">
                  <div class="selectbox list__item-element">
                    <select class="form-control" name="" id="" required="">
                      <option value="">Çekmece Seçiniz</option>
                    </select>
                  </div>
                </div>
              </li>
              <li class="list__item col-md-4">
                <div class="list__item-form-group">
                  <div class="selectbox list__item-element">
                    <select class="form-control" name="" id="" required="">
                      <option value="">Durum Seçiniz</option>
                    </select>
                  </div>
                </div>
              </li>
              <li class="list__item col-md-4">
                <button class="button button--size-sm button--aqua">İşlemi Gerçekleştir</button>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>

