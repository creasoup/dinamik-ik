<div class="modal fade" id="adresEkle">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Adres Ekle</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form" id="adresEkleForm" method="post" action="">
          <ul class="list list--column list--content form-layout">
            <li class="list__item">
              <label class="list__item-title">Adres Tipi</label>
              <div class="list__item-form-group">
                <input type="text" class="form-control" id="adresTipi" name="adresTipi" required>
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">İl</label>
              <div class="list__item-form-group">
                <div class="selectbox">
                  <select name="adresIl" id="adresIl" required>
                    <option value="">Seciniz</option>
                    <option value="34">Istanbul</option>
                  </select>
                </div>
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">İlçe</label>
              <div class="list__item-form-group">
                <div class="selectbox">
                  <select name="adresIlce" id="adresIlce" required>
                    <option value="">Seciniz</option>
                    <option value="2">Besiktas</option>
                  </select>
                </div>
              </div>
            </li>
            <li class="list__item list__item-flex-start">
              <label class="list__item-title">Adres</label>
              <div class="list__item-form-group">
                <textarea class="form-control" cols="30" rows="10" name="adresTextarea" id="adresTextarea" required></textarea>
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">Posta Kodu</label>
              <div class="list__item-form-group">
                <input type="number" class="form-control" id="adresPostaKodu" name="adresPostaKodu" required>
              </div>
            </li>
            <li class="list__item list__item-footer">
              <label class="list__item-title">&nbsp;</label>
              <input type="submit" class="button button--aqua button--size-sm" value="Kaydet">
            </li>
          </ul>
        </form>
      </div>
    </div>
  </div>
</div>