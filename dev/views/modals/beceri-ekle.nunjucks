<div class="modal fade" id="beceriEkle">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Beceri Ekle</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form" id="beceriEkleForm" method="post" action="">
          <ul class="list list--column list--content form-layout">
            <li class="list__item">
              <label class="list__item-title">Beceri Tipi</label>
              <div class="list__item-form-group">
                <div class="selectbox">
                  <select name="beceri-tipi-select" id="beceri-tipi-select" required>
                    <option value="">Seciniz</option>
                    <option value="1">Beceri Tipi</option>
                  </select>
                </div>
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">Beceri</label>
              <div class="list__item-form-group">
                <input type="text" class="form-control" id="beceriInput" name="beceriInput" required>
              </div>
            </li>
            <li class="list__item list__item-flex-start">
              <label class="list__item-title">Açıklama</label>
              <div class="list__item-form-group">
                <textarea class="form-control" cols="30" rows="10" id="beceriAciklamaInput" name="beceriAciklamaInput" required></textarea>
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">Başlangıç Tarihi</label>
              <div class="list__item-form-group">
                <input type="date" class="form-control" id="beceriBaslangicTarihi" name="beceriBaslangicTarihi" required>
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">Bitiş Tarihi</label>
              <div class="list__item-form-group">
                <input type="date" class="form-control" id="beceriBitisTarihi" name="beceriBitisTarihi" required>
              </div>
            </li>
            <li class="list__item list__item-footer">
              <label class="list__item-title">&nbsp;</label>
              <input type="submit" class="button button--aqua button--size-sm" value="Kaydet">
            </li>
          </ul>
        </form>
      </div>
    </div>
  </div>
</div>