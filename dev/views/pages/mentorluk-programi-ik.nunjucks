                      <div class="button-group button-group--has-hover-active">
                        <a href="" class="button button--aqua">Seç</a>
                      </div>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
