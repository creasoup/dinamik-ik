                  <li class="list__item col-md-12">
                    <label class="list__item-title">Bölümü</label>
                    <div class="list__item-form-group">
                      <input type="text" class="form-control" value="VW Binek & Ticaret - SSS - Garanti" disabled>
                    </div>
                  </li>
                  <li class="list__item col-md-12">
                    <label class="list__item-title">Görevi</label>
                    <div class="list__item-form-group">
                      <input type="text" class="form-control" value="Garanti Yetkilisi" disabled>
                    </div>
                  </li>
                  <li class="list__item col-md-12">
                    <label class="list__item-title">Ünvanı</label>
                    <div class="list__item-form-group">
                      <input type="text" class="form-control" value="Yetkili" disabled>
                    </div>
                  </li>
                  <li class="list__item col-md-12">
                    <label class="list__item-title">Personel Grubu</label>
                    <div class="list__item-form-group">
                      <input type="text" class="form-control" value="Kadrolu" disabled>
                    </div>
                  </li>
                  <li class="list__item col-md-12">
                    <label class="list__item-title">Maaşı</label>
                    <div class="list__item-form-group">
                      <input type="text" class="form-control" value="0.000,00 TL" disabled>
                    </div>
                  </li>
                  <li class="list__item col-md-12">
                    <label class="list__item-title">İş Ailesi</label>
                    <div class="list__item-form-group">
                      <input type="text" class="form-control" value="Kanal Yönetimi" disabled>
                    </div>
                  </li>
                  <li class="list__item col-md-12">
                    <label class="list__item-title">Kademe</label>
                    <div class="list__item-form-group">
                      <input type="text" class="form-control" value="0" disabled>
                    </div>
                  </li>
                </ul>
              </div>
            </div>
            <div class="col-md-6">
              <header class="card__header card__header--cols">
                <h3 class="card__sub-title">Personelin Mevcut</h3>
