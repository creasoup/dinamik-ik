{% extends "./templates/layout.nunjucks" %}

{% block title %}
	Personel Talep Bilgilieri
{% endblock %}

{% block bodyClass %}{% endblock %}

{% block content %}

{% include "./partials/sidebar-calisan.nunjucks" %}


<div class="app container">
	
	{% include "./partials/header.nunjucks" %}

  <div class="card card--widget col-widget card--widget-aqua no-height">
    <div class="row personal-card personal-card--no-aside">
      <div class="col-md-12 personal-card__info">
        <header class="card__header card__header--cols">
          <h2 class="card__title">Kişisel Bilgiler</h2>
          <a href="#" class="button button--aqua">Geri Dön</a>
        </header>
        <div class="card__main card__main--listing">
          <ul class="list list--content form-layout">
            <li class="list__item">
              <label class="list__item-title">Aday No</label>
              <div class="list__item-form-group">
                <input type="text" class="form-control" value="7578" disabled="disabled">
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">Uyruğu</label>
              <div class="list__item-form-group">
                <input type="text" class="form-control" value="T.C." disabled="disabled">
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">Adı</label>
              <div class="list__item-form-group">
                <input type="text" class="form-control" value="Ebru" disabled="disabled">
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">Ülke</label>
              <div class="list__item-form-group">
                <input type="text" class="form-control" value="Türkiye" disabled="disabled">
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">Soyadı</label>
              <div class="list__item-form-group">
                <input type="text" class="form-control" value="Atış" disabled="disabled">
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">İl</label>
              <div class="list__item-form-group">
                <input type="text" class="form-control" value="İstanbul" disabled="disabled">
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">E-Posta</label>
              <div class="list__item-form-group">
                <input type="text" class="form-control" value="ebruatis@dogusotomotiv.com.tr" disabled="disabled">
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">İlçe</label>
              <div class="list__item-form-group">
                <input type="text" class="form-control" value="Kadıköy" disabled="disabled">
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">Doğum Tarihi</label>
              <div class="list__item-form-group">
                <input type="text" class="form-control" value="00.00.0000" disabled="disabled">
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">GSM Tel</label>
              <div class="list__item-form-group">
                <input type="text" class="form-control" value="0 000 000 00 00" disabled="disabled">
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">Cinsiyet</label>
              <div class="list__item-form-group">
                <input type="text" class="form-control" value="Kadin" disabled="disabled">
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">İş Tel</label>
              <div class="list__item-form-group">
                <input type="text" class="form-control" value="0 000 000 00 00" disabled="disabled">
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">Medeni Durumu</label>
              <div class="list__item-form-group">
                <input type="text" class="form-control" value="Bekar" disabled="disabled">
              </div>
            </li>
            <li class="list__item">
              <label class="list__item-title">Ehliyet Sınıfı</label>
              <div class="list__item-form-group">
                <input type="text" class="form-control" value="E Sınıfı" disabled="disabled">
              </div>
            </li>
          </ul>
        </div>
      </div>

      <div class="col-md-12">
        <header class="card__header card__header--cols">
          <h2 class="card__title">Öğrenim Bilgileri</h2>
        </header>
        <div class="card__main">
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Öğrenim Durumu</th>
                  <th>Başlama Tarihi</th>
                  <th>Bitiş Tarihi</th>
                  <th>Okul</th>
                  <th>Bölüm</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Lise</td>
                  <td>00.00.0000</td>
                  <td>00.00.0000</td>
                  <td>Kartal TML</td>
                  <td>Muhasebe</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="col-md-12">
        <header class="card__header card__header--cols">
          <h2 class="card__title">Yabancı Dil</h2>
        </header>
        <div class="card__main">
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Dil</th>
                  <th>Okuma</th>
                  <th>Yazma</th>
                  <th>Konuşma</th>
                  <th>Seviye</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>-</td>
                  <td>-</td>
                  <td>-</td>
                  <td>-</td>
                  <td>-</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="col-md-12">
        <header class="card__header card__header--cols">
          <h2 class="card__title">Uygunluk Durumu</h2>
        </header>
        <div class="card__main">
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr class="vertical-align--md u--no-bottom-border">
                  <th width="200">
                    <div class="form-group custom-radio">
                      <input type="radio" id="radioName1" name="radio">
                      <label for="radioName1"><span>Uygun</span></label>
                    </div>
                  </th>
                  <th width="250">
                    <div class="form-group custom-radio">
                      <input type="radio" id="radioName2" name="radio">
                      <label for="radioName2"><span>Uygun Değil</span></label>
                    </div>
                  </th>
                  <th width="100">Açıklama:</th>
                  <th>
                    <textarea class="form-control form-control--no-height" cols="3" rows="2"></textarea>
                  </th>
                  <th width="200">
                    <a href="#" class="button button--size-sm button--aqua">İK’ya Bildir</a>
                  </th>
                </tr>
              </thead>
            </table>

            <a href="#" class="button button--size-md button--aqua">Yazdır</a>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

{% endblock %}
